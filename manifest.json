{
  "manifest_version": 3,
  "name": "学习通全能助手 (自动翻页版)",
  "version": "4.8",
  "description": "集成了自动抓取、自动翻页、多格式导出与考试答题功能",


  "icons": {
    "16": "icons/stack-of-books.png",
    "48": "icons/stack-of-books.png",
    "128": "icons/stack-of-books.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/stack-of-books.png",
      "48": "icons/stack-of-books.png",
      "128": "icons/stack-of-books.png"
    },
    "default_title": "点击打开学习通助手"
  },


  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.chaoxing.com/*",
        "*://*.erya100.com/*"
      ],
      "js": [
        "xlsx.full.min.js",
        "utils.js",
        "pagination.js", 
        "ui.js",
        "scraper.js",
        "solver.js",
        "main.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "xuexitong-scraper@tomgranger.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}